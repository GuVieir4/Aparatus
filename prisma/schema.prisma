generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barbershop {
  id          String             @id @default(uuid())
  name        String
  addres      String
  description String
  imageUrl    String
  phones      String[]
  services    BarberhopService[]
}

model BarberhopService {
  id           String     @id @default(uuid())
  name         String
  description  String
  imageUrl     String
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id])
  priceInCents Int
}

model Booking {
  id          String    @id @default(uuid())
  serviceId   String
  barberhopId String
  date        DateTime  @db.Timestamptz
  canceled    Boolean?  @default(false)
  canceledAt  DateTime? @db.Timestamptz
}
